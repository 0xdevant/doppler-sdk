{
  "name": "doppler-kit",
  "author": "Whetstone Research",
  "module": "dist/doppler-kit.esm.js",
  "version": "0.1.0",
  "license": "MIT",
  "main": "src/index.ts",
  "typings": "dist/index.d.ts",
  "packageManager": "yarn@1.22.18",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start": "tsc watch ./src/**",
    "test": "vitest",
    "build": "tsc",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.6",
    "@vitest/coverage-c8": "^0.33.0",
    "anvil": "^0.0.6",
    "size-limit": "^11.1.6",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "ethers": "^5.7.2",
    "turbo": "^2.3.2",
    "viem": "^2.21.45"
  }
}
